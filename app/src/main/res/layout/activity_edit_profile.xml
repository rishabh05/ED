<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_status_outer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-82dp"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/status_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/edt_profile_image_outer_layout_margin_left"
                android:paddingTop="@dimen/edt_profile_image_outer_layout_margin_top"
                android:weightSum="10">


                <com.mikepenz.materialdrawer.view.BezelImageView
                    android:id="@+id/edit_profile_image"
                    android:layout_width="@dimen/material_drawer_account_header_compact1"
                    android:layout_height="@dimen/material_drawer_account_header_compact1"
                    android:layout_marginTop="@dimen/edt_profile_image_frame_layout_margin_top"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    app:biv_maskDrawable="@drawable/circle_mask" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edt_profile_text_layout_margin_left"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/profile_first_name"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edt_profile_edt_text_height"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:hint="@string/first_name_hint"
                        android:inputType="textCapSentences"
                        android:maxLength="200"
                        android:paddingRight="@dimen/edit_profile_edt_txt_right_padding"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/edit_prfile_edit_text_size" />

                    <EditText
                        android:id="@+id/profile_last_name"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edt_profile_edt_text_height"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:hint="@string/last_name_hint"
                        android:inputType="textCapSentences"
                        android:maxLength="200"
                        android:paddingRight="@dimen/edit_profile_edt_txt_right_padding"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/edit_prfile_edit_text_size" />

                    <EditText
                        android:id="@+id/profile_title"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edt_profile_edt_text_height"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:hint="@string/job_title_hint"
                        android:inputType="textCapSentences"
                        android:maxLength="200"
                        android:paddingRight="@dimen/edit_profile_edt_txt_right_padding"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/edit_prfile_edit_text_size" />

                    <EditText
                        android:id="@+id/profile_nick_name"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edt_profile_edt_text_height"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:ellipsize="end"
                        android:ems="3"
                        android:hint="@string/nick_name"
                        android:inputType="textCapSentences"
                        android:maxLength="100"
                        android:paddingRight="@dimen/edit_profile_edt_txt_right_padding"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/edit_prfile_edit_text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:gravity="clip_horizontal"
                    android:padding="@dimen/edit_profile_contact_text_view_padding">

                    <TextView
                        android:id="@+id/work_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edit_profile_header_txt_margin_left"
                        android:text="@string/edit_work"
                        android:textColor="@color/black"
                        android:textSize="@dimen/edit_profile_contact_text_view_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_edit_contact_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/container_margin_top"
                    android:layout_marginLeft="@dimen/edit_profile_contact_container_margin_left"
                    android:layout_marginTop="@dimen/container_margin_top"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/phone_contact_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edit_profile_contact_phn_layout_margin_left"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/id_add_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_plus" />

                    <TextView
                        android:id="@+id/w_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edit_profile_contact_phn_text_margin_left"
                        android:gravity="center_horizontal"
                        android:text="@string/phone"
                        android:textColor="@color/lightTeal" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/all_view_margin_left"
                android:layout_marginTop="@dimen/edit_profile_contact_view_margin_top"
                android:background="@color/lightGrey" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/id_edit_login_id_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edit_profile_contact_dept_layout_margin_left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_login_id_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_company_details_top_margin"
                        android:text="@string/work_label"
                        android:textColor="@color/lightGrey" />

                    <TextView
                        android:id="@+id/id_login_id_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightGrey"
                        android:textSize="@dimen/edit_profile_login_id_txt_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_edit_contact_container_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/container_margin_top"
                android:layout_marginLeft="@dimen/edit_profile_contact_container_margin_left"
                android:layout_marginTop="@dimen/container_margin_top"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_phn_layout_margin_left"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_add_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_plus" />

                <TextView
                    android:id="@+id/w_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edit_profile_contact_phn_text_margin_left"
                    android:gravity="center"
                    android:text="@string/email"
                    android:textColor="@color/lightTeal" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/all_view_margin_left"
                android:layout_marginTop="@dimen/edit_profile_contact_view_margin_top"
                android:background="@color/lightGrey" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/id_edit_department_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/edit_profile_contact_dept_layout_margin_left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_department_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_company_details_top_margin"
                        android:text="@string/edit_department"
                        android:textColor="@color/lightTeal" />

                    <TextView
                        android:id="@+id/id_department_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingRight="@dimen/edit_profile_label_right_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_profile_contact_dept_value_text_size" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/dept_view"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/edit_profile_contact_view_height"
                android:layout_marginLeft="@dimen/all_view_margin_left"
                android:layout_marginTop="@dimen/edit_profile_contact_view_margin_top"
                android:background="@color/lightGrey" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/id_edit_reports_to_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/edit_profile_contact_dept_layout_margin_left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_reports_to_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_company_details_top_margin"
                        android:text="@string/edit_reports_to"
                        android:textColor="@color/lightTeal" />

                    <TextView
                        android:id="@+id/id_reports_to_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingRight="@dimen/edit_profile_label_right_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_profile_contact_reports_to_txt_size" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/reports_to_view"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/edit_profile_contact_reports_to_view_height"
                android:layout_marginLeft="@dimen/all_view_margin_left"
                android:layout_marginTop="@dimen/edit_profile_contact_view_margin_top"
                android:background="@color/lightGrey" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/id_edit_location_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/edit_profile_contact_dept_layout_margin_left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_location_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edit_company_details_top_margin"
                        android:text="@string/location"
                        android:textColor="@color/lightTeal" />

                    <TextView
                        android:id="@+id/id_location_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingRight="@dimen/edit_profile_label_right_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/location_value_txt_font_size" />
                </LinearLayout>


            </RelativeLayout>

            <View
                android:id="@+id/location_view"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/all_view_margin_left"
                android:layout_marginTop="@dimen/edit_profile_contact_view_margin_top"
                android:background="@color/lightGrey" />

            <LinearLayout
                android:id="@+id/id_edit_contact_container_team"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_container_margin_left"
                android:layout_marginTop="@dimen/container_margin_top"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_layout_team_acc_role"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_dept_layout_margin_left"
                android:layout_marginTop="@dimen/edit_company_details_top_margin"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/id_teams_label_acc_role"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/teams"
                    android:textColor="@color/lightGrey" />

                <TextView
                    android:id="@+id/id_team_value_acc_role"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/edit_profile_edt_txt_right_padding"
                    android:text="In house"
                    android:textColor="@color/lightGrey"
                    android:textSize="@dimen/location_value_txt_font_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/team_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_phn_layout_margin_left"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_add_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_plus" />

                <TextView
                    android:id="@+id/team_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edit_profile_contact_phn_text_margin_left"
                    android:gravity="center"
                    android:text="@string/team_label"
                    android:textColor="@color/lightTeal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/lightGrey"
                android:gravity="clip_horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/personal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edit_profile_header_txt_margin_left"
                    android:text="@string/edit_personal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/personal_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_edit_contact_container_social_profile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_container_margin_left"
                android:layout_marginTop="@dimen/container_margin_top"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_social_profile_add_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_phn_layout_margin_left"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_add_social_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_plus" />

                <TextView
                    android:id="@+id/social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edit_profile_contact_phn_text_margin_left"
                    android:gravity="center"
                    android:text="@string/social_profile_label"
                    android:textColor="@color/lightTeal" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/all_view_margin_left"
                android:layout_marginTop="@dimen/edit_profile_contact_view_margin_top"
                android:background="@color/lightGrey" />

            <LinearLayout
                android:id="@+id/id_edit_contact_container_phone2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_container_margin_left"
                android:layout_marginTop="@dimen/container_margin_top"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_personal_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_phn_layout_margin_left"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_add_phone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_plus" />

                <TextView
                    android:id="@+id/p_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edit_profile_contact_phn_text_margin_left"
                    android:gravity="center"
                    android:text="@string/phone"
                    android:textColor="@color/lightTeal" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/all_view_margin_left"
                android:layout_marginTop="@dimen/edit_profile_contact_view_margin_top"
                android:background="@color/lightGrey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_dept_layout_margin_left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_birth_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edit_company_details_top_margin"
                    android:text="@string/birth_day"
                    android:textColor="@color/lightTeal" />


                <TextView
                    android:id="@+id/id_birthday_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_birth_label"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/all_view_margin_left"
                android:layout_marginTop="@dimen/edit_profile_contact_view_margin_top"
                android:background="@color/lightGrey" />

            <LinearLayout
                android:id="@+id/id_edit_st_date_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_dept_layout_margin_left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_start_date_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edit_company_details_top_margin"
                    android:text="@string/edit_start_date"
                    android:textColor="@color/lightTeal" />

                <TextView
                    android:id="@+id/id_start_date_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="January 19, 2015"
                    android:textSize="@dimen/start_date_text_size" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="@dimen/edit_profile_contact_view_margin_bottom"
                android:layout_marginLeft="@dimen/all_view_margin_left"
                android:layout_marginTop="@dimen/edit_profile_contact_view_margin_top"
                android:background="@color/lightGrey" />

            <LinearLayout
                android:id="@+id/id_address_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/edit_profile_contact_container_margin_left"
                android:layout_marginTop="@dimen/home_margin_top"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/id_home_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/p_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="@string/edt_profile_home_text"
                    android:textColor="@color/lightTeal" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="@dimen/edit_profile_contact_view_margin_top"
                    android:background="@color/lightGrey" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-2dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_add_line1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:hint="@string/address_line1"
                        android:inputType="textCapSentences"
                        android:maxLength="200"
                        android:paddingBottom="@dimen/edit_text_common_padding"
                        android:paddingLeft="@dimen/edit_text_common_padding"
                        android:paddingRight="@dimen/edit_profile_edt_txt_right_padding"
                        android:paddingTop="@dimen/edit_text_common_padding"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/edit_prfile_edit_text_size">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_add_line2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:hint="@string/address_line2"
                        android:inputType="textCapSentences"
                        android:maxLength="200"
                        android:paddingBottom="@dimen/edit_text_common_padding"
                        android:paddingLeft="@dimen/edit_text_common_padding"
                        android:paddingRight="@dimen/edit_profile_edt_txt_right_padding"
                        android:paddingTop="@dimen/edit_text_common_padding"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/edit_prfile_edit_text_size">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_add_line3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:hint="@string/address_line3"
                        android:inputType="textCapSentences"
                        android:maxLength="200"
                        android:paddingBottom="@dimen/edit_text_common_padding"
                        android:paddingLeft="@dimen/edit_text_common_padding"
                        android:paddingRight="@dimen/edit_profile_edt_txt_right_padding"
                        android:paddingTop="@dimen/edit_text_common_padding"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/edit_prfile_edit_text_size">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_add_line4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/apptheme_edit_text_holo_light"
                        android:hint="@string/address_line4"
                        android:inputType="textCapSentences"
                        android:maxLength="200"
                        android:paddingBottom="@dimen/edit_text_common_padding"
                        android:paddingLeft="@dimen/edit_text_common_padding"
                        android:paddingRight="@dimen/edit_profile_edt_txt_right_padding"
                        android:paddingTop="@dimen/edit_text_common_padding"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/edit_prfile_edit_text_size">

                        <requestFocus />
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <!--Add address here-->

            <LinearLayout
                android:id="@+id/id_add_new_address_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_phn_layout_margin_left"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_add_new_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_plus" />

                <TextView
                    android:id="@+id/p_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edit_profile_contact_phn_text_margin_left"
                    android:gravity="center"
                    android:text="@string/address_txt"
                    android:textColor="@color/lightTeal" />
            </LinearLayout>


            <View
                android:id="@+id/address_grey_line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/home_bottom_view_margin_left"
                android:layout_marginTop="@dimen/edit_profile_contact_view_margin_top"
                android:background="@color/lightGrey" />

            <TextView
                android:id="@+id/id_emerg_cont_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_dept_layout_margin_left"
                android:layout_marginTop="@dimen/container_margin_top"
                android:text="@string/emergency_contact"
                android:textColor="@color/lightTeal"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/id_edit_contact_emergency_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_container_margin_left"
                android:layout_marginTop="@dimen/container_margin_top"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_emergency_contact_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_profile_contact_phn_layout_margin_left"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_add_emergency_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_plus" />

                <TextView
                    android:id="@+id/p_emg_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edit_profile_contact_phn_text_margin_left"
                    android:gravity="center"
                    android:text="@string/emergency_contact_plus"
                    android:textColor="@color/lightTeal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/lightGrey"
                android:gravity="clip_horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/notes_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edit_profile_header_txt_margin_left"
                    android:text="@string/notes_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/personal_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_add_notes_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/edit_profile_notes_margin_bottom"
                android:layout_marginLeft="@dimen/edit_profile_notes_layout_margin_left"
                android:layout_marginTop="@dimen/edit_profile_notes_margin_bottom"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/id_notes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edit_profile_notes_margin_left"
                    android:background="@drawable/edit_text_holo_light"
                    android:drawablePadding="10dp"
                    android:hint="@string/notes_hint"
                    android:inputType="textMultiLine"
                    android:paddingBottom="@dimen/edit_text_common_padding"
                    android:paddingLeft="@dimen/edit_text_common_padding"
                    android:paddingRight="10dp"
                    android:paddingTop="@dimen/edit_text_common_padding"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/edit_prfile_edit_text_size" />

            </LinearLayout>

            <Button
                android:id="@+id/id_delete_contact"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/delete_button_margin_bottom"
                android:background="@drawable/button_border"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/delete_button_padding_left"
                android:paddingRight="@dimen/delete_button_padding_right"
                android:text="@string/delete_cont"
                android:textAllCaps="false"
                android:textColor="@color/color_dark_red"
                android:textSize="18dp" />

            <Button
                android:id="@+id/id_make_admin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/delete_button_margin_bottom"
                android:background="@drawable/button_border"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/delete_button_padding_left"
                android:paddingRight="@dimen/delete_button_padding_right"
                android:text="@string/make_admin"
                android:textAllCaps="false"
                android:textColor="@color/color_dark_red"
                android:textSize="18dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>