<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="1dp">

    <RelativeLayout
        android:id="@+id/statusTitlePanel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/darkTeal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statusTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imgBtnStatusExpand"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_button_background"
        android:src="@drawable/arrow_expand" />
</FrameLayout>