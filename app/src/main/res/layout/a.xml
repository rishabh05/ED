<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_searchWidget"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightTeal"
    android:orientation="horizontal"
    android:padding="@dimen/search_widget_layout_padding">

    <ImageView
        android:id="@+id/id_searchViewBackPressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/search_back_margin"
        android:src="@drawable/ic_arrow_back" />

    <EditText
        android:id="@+id/search_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_rectangle_shape"
        android:drawableLeft="@drawable/ic_search_black"
        android:focusable="true"
        android:hint="@string/search_hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="@dimen/search_box_padding"
        android:singleLine="true"
        android:textColorHint="@color/orange"
        android:textCursorDrawable="@drawable/cursor_color" />
</LinearLayout>