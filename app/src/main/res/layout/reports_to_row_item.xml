<com.eworkplaceapps.ed.view.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/id_relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="75dp">

        <com.eworkplaceapps.ed.view.InertCheckBox
            android:id="@+id/reports_to_singleitem_checkbox"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/reports_to_radio_bt_margin_left"
            android:layout_marginRight="@dimen/reports_to_radio_bt_padding_right"
            android:button="@drawable/single_radio_chice"
            android:focusable="false" />

        <com.mikepenz.materialdrawer.view.BezelImageView
            android:id="@+id/profile_image_view"
            android:layout_width="@dimen/reports_to_image_height_weight"
            android:layout_height="@dimen/reports_to_image_height_weight"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/reports_to_singleitem_checkbox"
            app:biv_maskDrawable="@drawable/circle_mask" />


        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="fill_parent"
            android:layout_height="73dp"
            android:layout_toRightOf="@id/profile_image_view"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/last_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="3"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:background="@color/lightGrey"
            android:visibility="gone"></View>
    </RelativeLayout>


</com.eworkplaceapps.ed.view.CheckableRelativeLayout>
